<div class="table-header"><div class="table-header r"><div class="table-header m"><h2>Paikan tietojen muokkaus</h2></div></div></div>
<div class="border">

<% form_for :location,
			:url => location_path(:id => @location),
			:html => {:method => :put } do |f| -%>
  <%= f.error_messages %>
  <p><%= f.label :name, 'Paikan nimi' %>
  <%= f.text_field :name %><br /></p>

  <p><%= f.label :address, 'Osoite' %>
  <%= f.text_field :address %><br /></p>

  <p>
    <%= f.submit "Tallenna" %>
  </p>
<% end %>
</div>