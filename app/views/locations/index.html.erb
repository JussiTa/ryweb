<h1>Paikat</h1>

<table>
  <thead>
  	<tr>
		<th>Paikka</th>
		<th>Osoite</th>
		<th>&nbsp;</th>
	</tr>
  </thead>

<tbody>
<% for location in @locations %>
  <tr>
	<td><%= link_to location.name, location_path(:id => location) %></td>
	<td><%= location.address %></td>
    <td><%= link_to 'Muokkaa', edit_location_path(:id => location) %>
    <%= link_to 'Poista', location_path(:id => location), :confirm => 'Oletko varma?', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
</table>

