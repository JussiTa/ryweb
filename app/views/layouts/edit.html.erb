<div class="table-header"><div class="table-header r"><div class="table-header m"><h2>Ulkoasun muokkaus <%=@layout.name %></h2></div></div></div>
<div class="border">

  <%= crumbs %>

<div id="buttonbar">
<%= link_to 'Näytä', layout_path(:id => @layout) %>
</div>

<% form_for( :layout, :url => layout_path(:id => @layout), :html => {:method => :put}) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :name, "Nimi" %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :content,"Sisältö" %>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Päivitä' %>
  </p>
<% end %>

</div>

