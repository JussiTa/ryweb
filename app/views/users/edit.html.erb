<h1>Käyttäjän tietojen muokkaus</h1>

<% form_for :user,
			:url => user_path(:id => @user),
			:html => {:method => :put } do |f| -%>
  <%= f.error_messages %>
 
<p><%= label_tag 'login', 'Käyttäjätunnus' %><br/>
<%= @user.login %></p>

<p><%= label_tag 'email', 'Sähköposti' %><br/>
<%= f.text_field :email %></p>

<p><%= label_tag 'password', 'Salasana' %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag 'password_confirmation', 'Salasanan vahvistus' %><br/>
<%= f.password_field :password_confirmation %></p>

<% if current_user.user_level <= 10 %>
<p><%= label_tag 'user_level', 'Käyttäjätaso' %><br/>
<%= f.select :user_level, @user.getOptionsForSelectList(:user_level), options ={:prompt => ""} %></p>
<% end %>
  
  <p>
    <%= f.submit "Tallenna" %>
  </p>
<% end %>