<div class="table-header"><div class="table-header r"><div class="table-header m"><h2>Uusi tiedote</h2></div></div></div>
<div class="border">
 
<% form_for(@message) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :public %><br />
    <%= f.check_box :public %>
  </p>
  <p>
    <%= f.label :valid_from %><br />
    <%= f.datetime_select :valid_from %>
  </p>
  <p>
    <%= f.label :valid_until %><br />
    <%= f.datetime_select :valid_until %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', messages_path(:id => @message) %>

</div>
