<div class="table-header"><div class="table-header r"><div class="table-header m"><h2>Yhdistyksen tietojen muokkaus</h2></div></div></div>
<div class="border">

  <%= crumbs %>

<% form_for :customer,
			:url => customer_path(:id => @customer),
			:html => {:method => :put } do |f| -%>
  <%= f.error_messages %>
  
  <p><%= f.label :name, 'Järjestelmän nimi' %>
    <% if current_user.user_level <= 5 %>
           <%= f.text_field :name %><br />
           <% else %>
	<%= @edit_customer.name %>
           <% end %>
  </p>
  <p><%= f.label :title, 'Yhdistyksen nimi' %>
    <%= f.text_field :title %>
  </p>
    
   
   <p><%= f.label :address, 'Lähiosoite' %>
    <%= f.text_field :address %>
    </p>
      <p><%= f.label :zip_code, 'Postinumero' %>
    <%= f.text_field :zip_code %>
    </p>
       <p><%= f.label :city, 'Paikkakunta' %>
    <%= f.text_field :city %>
    </p>

    <p><%= f.submit "Tallenna" %>
    </p>
   
    	
    	

  </p>
<% end %>
</div>
