<h1>Listing configurations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Value</th>
  </tr>

<% @configurations.each do |configuration| %>
  <tr>
    <td><%=h configuration.name %></td>
    <td><%=h configuration.value %></td>
    <td><%= link_to 'Show', configuration_path(:id => configuration) %></td>
    <td><%= link_to 'Edit', edit_configuration_path(:id => configuration) %></td>
    <td><%= link_to 'Destroy', :id => configuration, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New configuration', new_configuration_path %>
